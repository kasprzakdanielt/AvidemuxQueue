<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fqt.Controller">
   <children>
      <VBox>
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text=" Output location" />
            <HBox prefHeight="0.0" prefWidth="921.0">
               <children>
                  <Button mnemonicParsing="false" onMouseClicked="#pathChooser" text="Browse" />
                  <TextField fx:id="outputPath" prefHeight="25.0" prefWidth="867.0" />
               </children>
            </HBox>
            <Label text=" Choose output audiocodec" />
            <ComboBox fx:id="audiocodecCombobox" onAction="#comboboxaction" prefWidth="150.0" promptText="Audio" visibleRowCount="3" />
            <Label alignment="CENTER" contentDisplay="CENTER" text=" Progress" />
            <ProgressBar fx:id="progressBar" prefWidth="200.0" progress="0.0" />
            <HBox VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="addButton" disable="true" mnemonicParsing="false" text="Add" />
                  <Button fx:id="startButton" alignment="TOP_LEFT" mnemonicParsing="false" onMousePressed="#startPressed" text="Start" />
               </children>
            </HBox>
         </children>
      </VBox>
      <TableView fx:id="fileList" onDragDropped="#handleDrop" onDragOver="#handleDragOver">
        <columns>
          <TableColumn fx:id="filenameColumn" prefWidth="735.0" text="Filename" />
          <TableColumn fx:id="audioColumn" minWidth="0.0" prefWidth="86.0" text="Audio Codec" />
            <TableColumn fx:id="statusColumn" prefWidth="98.0" text="Status" />
        </columns>
      </TableView>
   </children>
</VBox>
